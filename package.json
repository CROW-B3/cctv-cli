{
  "name": "@b3-crow/cctv-cli",
  "version": "0.0.2",
  "description": "CLI tool for capturing and streaming CCTV video+audio to the ingest service",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "cctv": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/index.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "bun run prettier src/ --write",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CROW-B3/cctv-cli.git"
  },
  "author": "CROW By B3",
  "license": "MIT",
  "packageManager": "bun@1.1.0",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "@inquirer/prompts": "^7.5.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/ws": "^8.18.0",
    "commitlint": "^20.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
